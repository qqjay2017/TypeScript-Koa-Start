{
  "name": "lol_rest",
  "version": "1.0.0",
  "description": "A starting point for Node.js express apps with TypeScript",
  "author": "huangSir",
  "scripts": {
    "start": "npm run serve",
    "build": "npm run build-ts && npm run lint && npm run copy-static-assets",
    "serve": "cross-env  NODE_ENV=development  ts-node-dev --respawn ./src/server",
    "watch-node": "nodemon dist/server.js",
    "watch": "cross-env NODE_ENV=development concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"cyan.bold,green.bold\"  \"npm run watch-ts\" \"npm run watch-node\"",
    "test": "jest --forceExit --coverage --verbose",
    "watch-test": "npm run test -- --watchAll",
    "build-ts": "tsc",
    "watch-ts": "tsc -w",
    "build-sass": "node-sass src/public/css/main.scss dist/public/css/main.css",
    "watch-sass": "node-sass -w src/public/css/main.scss dist/public/css/main.css",
    "lint": "tsc --noEmit && eslint \"**/*.{js,ts}\" --quiet --fix",
    "copy-static-assets": "ts-node copyStaticAssets.ts",
    "debug": "npm run build && npm run watch-debug",
    "serve-debug": "nodemon --inspect dist/server.js",
    "watch-debug": "concurrently -k -p \"[{name}]\" -n \"Sass,TypeScript,Node\" -c \"yellow.bold,cyan.bold,green.bold\" \"npm run watch-sass\" \"npm run watch-ts\" \"npm run serve-debug\""
  },
  "keywords": [],
  "license": "ISC",
  "devDependencies": {
    "@types/async": "^3.2.1",
    "@types/bluebird": "^3.5.30",
    "@types/compression": "^1.7.0",
    "@types/concurrently": "^5.2.0",
    "@types/http-errors": "^1.8.0",
    "@types/koa": "^2.11.3",
    "@types/koa-bodyparser": "^4.3.0",
    "@types/koa-compress": "^4.0.0",
    "@types/koa-helmet": "^5.2.0",
    "@types/koa-logger": "^3.1.1",
    "@types/koa-router": "^7.4.0",
    "@types/koa__cors": "^3.0.1",
    "@types/koa__router": "^8.0.2",
    "@types/mongoose": "^5.7.15",
    "@types/morgan": "^1.9.1",
    "@types/node": "^13.13.4",
    "@typescript-eslint/eslint-plugin": "^3.10.1",
    "@typescript-eslint/parser": "^3.10.1",
    "concurrently": "^5.2.0",
    "cross-env": "^7.0.2",
    "eslint": "^7.7.0",
    "nodemon": "^2.0.4",
    "nyc": "^15.1.0",
    "ts-node": "^8.10.2",
    "ts-node-dev": "^1.0.0-pre.61",
    "typescript": "^3.9.7"
  },
  "dependencies": {
    "@koa/cors": "^3.1.0",
    "@koa/router": "^8.0.8",
    "@types/cron": "^1.7.2",
    "async": "^3.2.0",
    "bluebird": "^3.7.2",
    "chalk": "^4.0.0",
    "compression": "^1.7.4",
    "cron": "^1.8.2",
    "dotenv": "^8.2.0",
    "http-errors": "^1.8.0",
    "http-status-codes": "^2.1.2",
    "koa": "^2.11.0",
    "koa-body": "^4.1.1",
    "koa-bodyparser": "^4.3.0",
    "koa-compose": "^4.1.0",
    "koa-compress": "^4.0.1",
    "koa-helmet": "^5.2.0",
    "koa-logger": "^3.2.1",
    "mongoose": "^5.9.12",
    "morgan": "^1.10.0",
    "uninstall": "0.0.0",
    "winston": "^3.3.3"
  }
}
